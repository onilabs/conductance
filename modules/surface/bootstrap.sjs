  function launch() {
    var Countdown = @ObservableVar(10);
    var Status = @ObservableVar(`Ignition in $Countdown seconds`);
    @doModal({
      title: `Rocket Launch`,
      body: Status .. @H2() .. @TextCenter,
      footer: @Btn('primary', 'Abort') .. @Enabled(Countdown) .. @OnClick({|| return})
    }) {
      ||
      for (var i=9; i>=0; --i) {
        hold(1000);
        Countdown.set(i);
      }

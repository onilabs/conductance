@ = require('mho:std');
exports.serve = function() {
  @server.run({
    address: @Port(7079),
    routes: [
      @Route(/ping$/, {
        "GET": function(req, matches) { req.response.end("Pong!"); _task(function(){hold(0); process.exit(0);}()); }
      }),
      @Route(/up$/, {
        "GET": function(req, matches) { req.response.end("ok"); }
      }),
      @Route(/stop$/, {
        "GET": function(req, matches) { process.exit(0); }
      }),
    ]
  });
}
